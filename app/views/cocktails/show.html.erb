<h1>😜 <%= @cocktail.name %></h1>

<br>
<br>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
  <%= dose.description %> de <%= dose.ingredient.name %>

  <%= link_to "❌", dose_path(dose), method: :delete %>
  </li>
  <% end %>
</ul>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<br>
<br>
<%= render "doses/form" %>

<br>
<br>

<%= link_to "Retour aux cocktails", cocktails_path, class: "btn btn-primary" %>
